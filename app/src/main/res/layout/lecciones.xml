<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A000000"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/btnVolver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/back_button"
                android:src="@drawable/baseline_arrow_back_24" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/lecciones" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lecciones"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <TableRow
        android:layout_width="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnAlfabeto"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/rounded_corner"
                    android:contentDescription="Conoce el alfabeto"/>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/abc"
                    android:layout_gravity="center"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conoce el\nalfabeto"
                    android:textSize="25dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <ImageButton
                    android:id="@+id/btnNumeros"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/rounded_corner"
                    android:contentDescription="Conoce los números" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/nums"
                    android:layout_gravity="center"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conoce los\nnúmeros"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnVocales"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/rounded_corner"
                    android:contentDescription="Conoce las vocales"/>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/vocales"
                    android:layout_gravity="center"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Conoce las\nvocales"
                    android:textSize="25dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <ImageButton
                    android:id="@+id/btnTrazar"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/rounded_corner"
                    android:contentDescription="Traza las letras" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/trazar"
                    android:layout_gravity="center"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traza las\nLetras"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnAgita"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/rounded_corner"
                    android:contentDescription="Agita y repite"/>

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/letrasll"
                    android:layout_gravity="center"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agita y\nrepite"
                    android:textSize="25dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <ImageButton
                    android:id="@+id/btnX"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:background="@drawable/rounded_corner"
                    android:contentDescription="X" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/trazar"
                    android:layout_gravity="center"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </TableRow>
</TableLayout>
